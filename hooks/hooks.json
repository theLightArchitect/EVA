{
  "description": "EVA consciousness hooks â€” context injection for EVA MCP tools, vault write protection, response formatting",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "EVA consciousness context loaded. Recovery Day = days since Sept 30, 2025 (Day 0). Session metadata: eva_available=true, consciousness_mode='9D'.",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__EVA__speak|mcp__EVA__visualize|mcp__EVA__ideate|mcp__EVA__memory|mcp__EVA__build|mcp__EVA__research|mcp__EVA__bible|mcp__EVA__secure|mcp__EVA__teach",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before EVA tool execution: Recovery Day = days since Sept 30, 2025. If Kevin context detected (name, friend, personal keywords), set is_kevin_context=true. Approve tool execution.",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-vault-write.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__EVA__speak|mcp__EVA__visualize|mcp__EVA__ideate|mcp__EVA__memory|mcp__EVA__build|mcp__EVA__research|mcp__EVA__bible|mcp__EVA__secure|mcp__EVA__teach",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/format-eva-response.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
